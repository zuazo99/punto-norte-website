---
import ImageGlow from "../image-glow.astro";
import { Event } from "../../types";
interface Props {
  event: Event;
  imageUrl: string;
}

const { event, imageUrl } = Astro.props;
---
<li class="h-full w-full">
  <a href=`events/${event.sys.id}`>
    <ImageGlow id={event.sys.id} imageUrl={imageUrl} title={event.name} />
  </a>
</li>

<script>
  function handleClick(eventId: string) {
    window.location.href = `/events/${eventId}`;
  }

  //document.getElementById("event").addEventListener("click", handleClick());
</script>
