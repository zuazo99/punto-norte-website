---
interface Props {
    title: string,
    imageUrl: string,
    id: string
}

const { title, imageUrl, id} = Astro.props;
---

<article class="group group-hover:transition-all relative h-96 w-full max-w-sm rounded-2xl bg-white shadow-md mx-auto">
    <header class="absolute z-10 w-full h-full flex items-center justify-center p-2">
        <h2 class="uppercase text-white text-5xl md:text-3xl font-brush text-center leading-tight group-hover:opacity-0 transition-opacity duration-300">
            {title}
        </h2>
    </header>
    <img class="absolute h-full w-full rounded-xl object-cover blur-0 brightness-125 duration-300 group-hover:blur-lg"
         src=`${imageUrl}` alt=""/>
    <img class="absolute h-full w-full object-cover rounded-xl brightness-[50%] group-hover:brightness-100 transition duration-300"
         src=`${imageUrl}` alt=""/>
</article>
