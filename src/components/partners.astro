---
import ContentSection from "./content-section.astro"

const collaborators = [
    {
        name: "Ayuntamiento de Portugalete",
        image: "Ayuntamiento_Portugalete.jpeg",
        link: "https://www.portugalete.org/es-ES/Paginas/default.aspx",
    },
    {
        name: "Gallos del Norte",
        image: "gallos_norte.jpeg",
        link: "https://www.instagram.com/miraelbuenrap?igsh=Z2V5MHphbDZobzdv",
    },
    {
        name: "Mira Buen Rap",
        image: "mira_buen_rap.jpeg",
        link: "https://www.instagram.com/gallosdelnortegz?igsh=MWpyeDJqemFqeWc0Nw==",
    },
];

---


<ContentSection id="partners" title="Colaboradores">
    <section class="bg-[#1a1a1a] py-16">
        <div class="container mx-auto px-6">
            <div class="grid gap-8 md:grid-cols-3">
                {collaborators.map((collaborator) => (
                        <a
                                href={collaborator.link}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="group block overflow-hidden rounded-lg shadow-lg transform transition-all duration-300 hover:scale-105 hover:shadow-xl focus:ring-2 focus:ring-offset-2 focus:ring-orange-400"
                        >
                            <div class="relative h-56 bg-gray-800">
                                <img
                                        src={collaborator.image}
                                        alt={collaborator.name}
                                        class="absolute inset-0 w-full h-full object-cover transition-opacity duration-300 group-hover:opacity-75"
                                />
                            </div>
                            <div class="bg-gray-800 p-4 h-full text-center">
                                <h3 class="text-lg font-semibold text-white font-brush transition-colors group-hover:text-orange-400">{collaborator.name}</h3>
                            </div>
                        </a>
                ))}
            </div>
        </div>
    </section>
</ContentSection>
