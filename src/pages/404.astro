---
import MainLayout from "~/layouts/MainLayout.astro";
import Starfield from "~/components/starfield.astro";
import HeroImage from "~/components/hero-image.astro";
import { Image } from "astro:assets";
import astronautImage from "~/assets/astronaut.png";
import "@fontsource/press-start-2p";
const widths = [450, 800];
const sizes = "(min-width: 640px) 42vw, 67vw";
---

<MainLayout title="404: Not Found">
  <section class="relative h-full bg-black">
    <Starfield />
    <div id="splash-bg-fallback" class="absolute inset-0 hidden opacity-40">
      <HeroImage />
    </div>
    <div class="relative grid h-full place-items-center sm:grid-cols-2">
      <header
        class="flex flex-col items-center gap-2 self-end sm:gap-4 sm:self-auto sm:justify-self-end"
      >
        <div
          class="space-y-6 text-center font-start font-extrabold tracking-tighter text-2xl md:text-8xl"
        >
          <h1
            class="gradient-text animate-[float_linear_5s_infinite_alternate_0.2s] tracking-superwide text-9xl"
          >
            404
          </h1>
          <h2 class="animate-[float_linear_4s_infinite_alternate] text-white">
            Not Found
          </h2>
        </div>
      </header>
      <div
        id="astronaut"
        class="w-2/3 max-w-3xl animate-float self-start sm:w-10/12 sm:self-auto sm:justify-self-start"
      >
        <Image
          class="h-full w-full object-cover"
          src={astronautImage}
          widths={widths}
          sizes={sizes}
          loading="eager"
          alt="A floating astronaut in a space suit"
        />
      </div>
    </div>
  </section>

  <noscript>
    <style>
      #splash-bg-fallback {
        display: block;
      }
    </style>
  </noscript>

  <style>
    @media (prefers-reduced-motion: reduce) {
      #astronaut {
        @apply animate-none;
      }

      :global(#starfield) {
        @apply hidden;
      }

      #splash-bg-fallback {
        @apply block;
      }
    }
  </style>
</MainLayout>
